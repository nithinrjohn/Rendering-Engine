<Application x:Class="Editor.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Editor">
    <Application.Resources>
        <ResourceDictionary>
            <FontFamily x:Key="ConcertOne">./Fonts/ConcertOne.ttf#Concert One</FontFamily>
            <FontFamily x:Key="Hio">./Fonts/hio.ttf#heroicons-outline</FontFamily>
            <FontFamily x:Key="His">./Fonts/his.ttf#heroicons-solid</FontFamily>

            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Themes/IconButtonTheme.xaml"/>
                <ResourceDictionary Source="Themes/TransparentButtonTheme.xaml"/>
                <ResourceDictionary Source="Themes/TextBoxTheme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
